#!/bin/bash

echo -e "VS Code cheat sheet, ver. 1.0"
echo -e "\nDisplay:"
echo -e "  Ctrl+Shift+P - Show Command Palette"
echo -e "  Ctrl+B - Toggle Sidebar visibility"
echo -e "  Ctrl+, - Show User Settings"
echo -e "  Ctrl+K Ctrl+S - Show Keyboard Shortcuts"
echo -e "  Ctrl+Shift+E - Show Explorer / Toggle focus"
echo -e "  Ctrl+Shift+F - Show Search"
echo -e "  Ctrl+Shift+H - Show Replace"
echo -e "  Ctrl+Shift+G - Show Source Control"
echo -e "  Ctrl+Shift+D - Show Debug"
echo -e "  Ctrl+Shift+X - Show Extensions"
echo -e "  Ctrl+Shift+M - Show Problems panel"
echo -e "  Ctrl+K Ctrl+H - Show Output panel"
echo -e "  Ctrl+Shift+Y - Show Debug Console panel"
echo -e "  Ctrl+J - Hide panel"
echo -e "  Ctrl+Shift+C - Open new terminal window"
echo -e "  Ctrl+K R - Reveal active file in explorer"
echo -e "  Ctrl+K O - Show active file in new window/instance"
echo -e "  Ctrl+Shift+N - Show new window/instance"
echo -e "\nFile management:"
echo -e "  Ctrl+N - New tab"
echo -e "  Ctrl+O - Open tab"
echo -e "  Ctrl+S - Save tab"
echo -e "  Ctrl+Shift+S - Save As tab"
echo -e "  Ctrl+W - Close tab"
echo -e "  Ctrl+K Ctrl+W - Close all tabs"
echo -e "  Ctrl+K F - Close folder"
echo -e "  Ctrl+Shift+T - Reopen closed tab"
echo -e "  Ctrl+K P - Copy path of active file"
echo -e "  Ctrl+\ - Split tab"
echo -e "  Ctrl+K Ctrl+\ - Split tab orthogonal"
echo -e "\nNavigation:"
echo -e "  Ctrl+PgUp/PgDown - Switch to previous/next tab"
echo -e "  Ctrl+Shift+PgUp/PgDown - Move tab left/right"
echo -e "  Ctrl+Tab - Switch to next tab"
echo -e "  Ctrl+Shift+Tab - Switch to previous tab"
echo -e "  Ctrl+1/2/3... - Switch to tab group"
echo -e "  Ctrl+Left/Right - Move active tab group left/right"
echo -e "  Ctrl+P - Go to File..."
echo -e "  Ctrl+G - Go to Line..."
echo -e "  Ctrl+Shift+O - Go to Symbol..."
echo -e "  Ctrl+T - Show all Symbols"
echo -e "  F8 - Go to next error/warning"
echo -e "  Shift+F8 - Go to previous error/warning"
echo -e "\nRich languages editing:"
echo -e "  Ctrl+Space - Trigger suggestion"
echo -e "  Ctrl+Shift+Space - Trigger parameter hints"
echo -e "  Ctrl+. - Quick Fix"
echo -e "  F2 - Rename Symbol"
echo -e "  Ctrl+K M - Change file language"
echo -e "  Ctrl+Shift+I - Format document"
echo -e "  Ctrl+K Ctrl+F - Format selection"
echo -e "  Ctrl+Shift+V - Open Markdown preview"
echo -e "  Ctrl+K V - Open Markdown preview to the side"
echo -e "  F12 - Go to Definition"
echo -e "  Ctrl+K F12 - Open Definition to the side"
echo -e "  Ctrl+Shift+F10 - Peek Definition"
echo -e "  Shift+F12 - Show References"
echo -e "\nBasic editing:"
echo -e "  Ctrl+C - Copy"
echo -e "  Ctrl+V - Paste"
echo -e "  Ctrl+X - Cut"
echo -e "  Home/End - Go to beginning/end of line"
echo -e "  Ctrl+Home/End - Go to beginning/end of file"
echo -e "  Alt+Up/Down - Move lines up/down"
echo -e "  Ctrl+Enter - Insert line below"
echo -e "  Ctrl+Shift+Enter - Insert line above"
echo -e "  Tab - Indent lines"
echo -e "  Shift+Tab - Outdent lines"
echo -e "  Ctrl+]/[ - Indent/Outdent lines"
echo -e "  Ctrl+Shift+K - Delete lines"
echo -e "  Ctrl+/ - Toggle line comments"
echo -e "  Ctrl+K Ctrl+C - Add line comments"
echo -e "  Ctrl+K Ctrl+U - Remove line comments"
echo -e "  Ctrl+Shift+A - Toggle block comment"
echo -e "  Ctrl+Up/Down - Scroll line up/down"
echo -e "  Alt+PgUp/PgDown - Scroll page up/down"
echo -e "  Ctrl+K Ctrl+X - Trim trailing whitespace"
echo -e "  Ctrl+Shift+[/] - Fold/unfold region"
echo -e "\nSearch and replace:"
echo -e "  Ctrl+F - Find"
echo -e "  Ctrl+H - Replace"
echo -e "  F3 - Find next"
echo -e "  Shift+F3 - Find previous"
echo -e "  Alt+Enter - Select all occurrences of Find match"
echo -e "  Ctrl+D - Add selection to next Find match"
echo -e "  Ctrl+K Ctrl+D - Move last selection to next Find match"
echo -e "\nMulti-cursor and selection:"
echo -e "  Ctrl+L - Select current line"
echo -e "  Ctrl+Shift+L - Select all occurrences of current selection"
echo -e "  Ctrl+F2 - Select all occurrences of current word"
echo -e "  Shift+Left/Right - Expand/shrink selection"
echo -e "\nDebug:"
echo -e "  F9 - Toggle breakpoint"
echo -e "  Ctrl+Shift+F9 - Remove all breakpoints"
echo -e "  F5 - Start/continue"
echo -e "  Shift+F5 - Stop"
echo -e "  F11 - Step into"
echo -e "  Shift+F11 - Step out"
echo -e "  F10 - Step over"
echo -e "  Ctrl+K Ctrl+I - Show hover"
echo -e "\nIntegrated terminal:"
echo -e "  Ctrl+\` - Show Terminal panel"
echo -e "  Ctrl+Shift+\` - Create new terminal"
echo -e "  Ctrl+Shift+C - Copy selection"
echo -e "  Ctrl+Shift+V - Paste into active terminal"
echo -e "  Ctrl+Shift+5 - Split terminal"
echo -e "  Ctrl_Shift+Left/Right - Resize terminal"
echo -e "  Ctrl+Shift+Up/Down - Scroll up/down"
echo -e "  Shift+PgUp/PgDown - Scroll page up/down"
echo -e "  Shift+Home/End - Scroll to top/bottom"
