#!/bin/bash

echo -e "tmux cheat sheet, ver. 1.0"
echo -e "\nCommands:"
echo -e "  tmux list-sessions - list sessions"
echo -e "  tmux a - attach to the last active session"
echo -e "  tmux a -t <SESSION_NAME> - attach to <SESSION_NAME>"
echo -e "  tmux new -s <SESSION_NAME> - create new <SESSION_NAME>"
echo -e "\nGeneral shortcuts:"
echo -e "  Ctrl+b ? - show all commands"
echo -e "  Ctrl+b : - enter tmux command"
echo -e "  Ctrl+b :kill-server - kill server"
echo -e "\nSession shortcuts:"
echo -e "  Ctrl+b s - list sessions"
echo -e "  Ctrl+b $ - name session"
echo -e "  Ctrl+b d - detach from session"
echo -e "  Ctrl+b :kill-session - kill session"
echo -e "\nWindow shortcuts:"
echo -e "  Ctrl+b w - list windows"
echo -e "  Ctrl+b c - create window"
echo -e "  Ctrl+b & - kill window"
echo -e "  Ctrl+b n - next window"
echo -e "  Ctrl+b p - previous window"
echo -e "  Ctrl+b f - find window"
echo -e "  Ctrl+b , - name window"
echo -e "\nPane shortcuts:"
echo -e "  Ctrl+b % - split pane vertically"
echo -e "  Ctrl+b \" - split pane horizontally"
echo -e "  Ctrl+b Ctrl+<ARROW> - resize pane"
echo -e "  Ctrl+b q - show pane numbers"
echo -e "  Ctrl+b z - toggle pane zoom"
echo -e "  Ctrl+b o - swap panes"
echo -e "  Ctrl+b { - move current pane left/up"
echo -e "  Ctrl+b } - move current pane right/down"
